@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

@using dojo_survey.Models;
@model Ninja;

<div class="text-center border border-dark border-3 p-5 m-5">
    <form action="survey" method="post">
        <div class="d-flex justify-content-between mb-2">
            <label for="name">
                <h4>Your Name: </h4>
            </label>
            <h4>@Model.name</h4>
        </div>
        <div class="d-flex justify-content-between mb-2">
            <label for="location">
                <h4>Dojo Location: </h4>
            </label>
            <h4>@Model.location</h4>
        </div>
        <div class="d-flex justify-content-between mb-2">
            <label for="language">
                <h4>Dojo Location: </h4>
            </label>
            <h4>@Model.language</h4>
        </div>
        <div class="d-flex justify-content-between mb-2">
            <label for="comment">
                <h4>Comment (optional): </h4>
            </label>
        </div>
        <h4>@Model.comment</h4>
    </form>
</div>