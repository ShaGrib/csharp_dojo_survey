@{
    ViewData["Title"] = "Home Page";
}

@model Ninja

<div class="text-center border border-dark border-3 p-5 m-5">
    <form action="survey" method="post">
        <div class="d-flex justify-content-between mb-2">
            <label for="name">
                <h4>Your Name: </h4>
            </label>
            <input type="text" name="name">
        </div>
        <div class="d-flex justify-content-between mb-2">
            <label for="location">
                <h4>Dojo Location: </h4>
            </label>
            <select name="location">
                <option value="San Jose">San Jose</option>
                <option value="Online">Online</option>
            </select>
        </div>
        <div class="d-flex justify-content-between mb-2">
            <label for="language">
                <h4>Dojo Location: </h4>
            </label>
            <select class="" name="language">
                <option value="C#">C #</option>
                <option value="Just C#">You know the only real choice is C#</option>
            </select>
        </div>
        <div class="d-flex justify-content-between mb-2">
            <label for="comment">
                <h4>Comment (optional): </h4>
            </label>
        </div>
        <div class="">
            <textarea class="form-control" name="comment" cols="30" rows="6"></textarea>
        </div>
        <div class="d-flex justify-content-end mt-2">
            <input class="btn btn-primary" type="submit" value="Submit">
        </div>
    </form>
</div>
